{% if items|length > 0 %}
  <li class="flyntComponent grid-item--{{ projectWidth }}" id="projects" is="flynt-grid-posts-selector">
    <div class="container">
      {% for item in items %}
        <div class="grid-item {{ post.post_type }}">
          <div class="content">
            <a href="{{ post.link }}" class="content-link content-link--{{ post.category }}" title="{{ post.title }}">
              {% if post.thumbnail %}
                <div class="overlay"></div>
                <img class="featuredImage" src="{{ post.thumbnail.src }}" />
                <img class="secondaryImage" src="{{ Image(post.hoverImage).src }}" />
              {% endif %}
              {% if post.coverVideo %}
                <div class="overlay overlay-video"></div>
                <video muted loop type="video/mp4" src="{{ post.meta('coverVideo') }}"></video>
              {% endif %}
              <div class="content-inner">
                <h3 class="content-subtitle">{{ post.client }}</h3>
                <h3 class="content-title">{{ post.title }}</h3>
              </div>
            </a>
          </div>
        </div>
      {% endfor %}
    </div>
  </li>
{% endif %}
